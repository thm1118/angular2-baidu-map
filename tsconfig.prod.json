{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "lib": ["es6", "dom"],
        "declaration": true,
        "outDir": "./",
        "types": []
    },
    "buildOnSave": false,
    "compileOnSave": false,
    "include": [
        "dist/**/*",
        "src/**/*",
        "Object.t.ts",
        "require.d.ts"
    ],
    "exclude": [
        "./node_modules/"
    ]
}
